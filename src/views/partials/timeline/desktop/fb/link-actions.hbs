<div class="fb-link-actions open">
	<a href="#"> Unlike </a> . 
	<a href="#"> Comment </a> . 
	<a href="#"> Share </a> .

	<div>
		
		{{#ifCond this.picture '&&' this.caption}}
			{{#if this.likes.summary.total_count}}
			<a href="#" class="icon-fb-like"> <i></i> {{this.likes.summary.total_count}}</a>
			{{/if}}
			
			{{#if this.comments.likes.summary.total_count}}
			<a href="#" class="icon-fb-comment"><i></i> {{this.comments.summary.total_count}}</a>
			{{/if}}
			
			{{#if this.shares.count}}
			<a href="#" class="icon-fb-shares"><i></i> {{this.shares.count}}</a>
			{{/if}}
		{{/ifCond}}
		<span>{{fromNow this.created_time}}</span>
		via
		<span>{{this.application.name}}</span>

		
	</div>
</div>