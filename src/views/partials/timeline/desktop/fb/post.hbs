<div class="fb-box{{#if $last}} last{{/if}}">
	<a href="#" target="_blank" class="fb-img-thumb">
		<img src="http://graph.facebook.com/{{this.from.id}}/picture?type=square" />
	</a>
	<div class="fb-box-content">
		{{> timeline/desktop/fb/post-header}}
		
		{{#ifCond this.picture '&&' this.caption}}
			{{> timeline/desktop/fb/status-post}}
			{{> timeline/desktop/fb/link-actions}}
		{{else}}
			<div>
				{{this.message}}
			</div>
			{{#if this.picture}}
				{{> timeline/desktop/fb/status-image}}
			{{/if}}
			{{> timeline/desktop/fb/link-actions}}
			{{> timeline/desktop/fb/comment-box}}
		{{/ifCond}}
	</div><!-- /fb-body-->	
</div><!-- /fb-box-->