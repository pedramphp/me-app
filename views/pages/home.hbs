{{#extend 'stylesheets'}}
	{{#if is_phone}}
	<link rel='stylesheet'
		href='/css/page-wrappers/home.css'
		type='text/css' />
	{{else}}
	<link rel='stylesheet'
		href='/css/page-wrappers/home-desktop.css'
		type='text/css' />
	{{/if}}
{{/extend}}

<div class='body-bg'></div>
<div class='container me-home'>
	<div>
		<header class='me-home-header'>
			{{> comps/header/logo}}
			<p>
				{{#i18n 'page_description'}}{{/i18n}}
			</p>
		</header>

		<section class='me-home-btns'>
			{{> buttons/fb this}}
			<a href='/login' class='btn-email'>
				Sign in using Email
			</a>

			{{#unless is_phone}}
			{{> comps/line-text}}
			{{/unless}}

			{{#if is_phone}}
			<footer>
				{{#i18n 'already_have_account'}}{{/i18n}}
				<a href='/login'>
					{{#i18n 'login'}}{{/i18n}}
				</a>
			</footer>
			{{/if}}

			{{#unless is_phone}}
			{{> buttons/signup }}
			{{/unless}}
		</section>
	</div>
</div>

{{#extend 'js-bottom'}}
{{/extend}}
